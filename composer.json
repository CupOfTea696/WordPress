{
    "name": "cupoftea/wordpress",
    "description": "WordPress",
    "type": "cupoftea-wordpress",
    "license": "MIT",
    "authors": [
        {
            "name": "Sven Wittevrongel",
            "email": "cupoftea696@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "cupoftea/wordpress-composer": "*",
        "cupoftea/wordpress-library": "*",
        "johnpbloch/wordpress": "~4.4"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "public-dir": "public",
        "files": [
            "app.php",
            "bootstrap/",
            "bootstrap/setThemeDir.php",
            "config/",
            "config/app.php",
            "config/view.php",
            "public/",
            "public/.htaccess",
            "public/assets/",
            "public/assets/.gitkeep",
            "public/content/",
            "public/content/index.php",
            "public/index.php",
            "public/plugins/",
            "public/plugins/index.php",
            "public/themes/",
            "public/themes/index.php",
            "public/wp-config.php",
            "storage/",
            "storage/app/",
            "storage/app/.gitignore",
            "storage/app/public/",
            "storage/app/public/.gitignore",
            "storage/framework/",
            "storage/framework/.gitignore",
            "storage/framework/views/",
            "storage/framework/views/.gitignore",
            "storage/logs/",
            "storage/logs/.gitignore"
        ]
    }
}
